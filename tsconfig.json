{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",         // Updated to NodeNext
    "moduleResolution": "NodeNext", // Must match the module option
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
